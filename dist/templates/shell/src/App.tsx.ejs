import { Suspense, lazy, useEffect, useState, Component } from 'react';
import type { ReactNode } from 'react';
import { Routes, Route, Link, useLocation } from 'react-router-dom';

interface ImportMap {
  imports: Record<string, string>;
}

const IMPORT_MAP_PATH = './import-map.json';

class ModuleErrorBoundary extends Component<
  { children: ReactNode; moduleName: string },
  { hasError: boolean; error: Error | null }
> {
  constructor(props: { children: ReactNode; moduleName: string }) {
    super(props);
    this.state = { hasError: false, error: null };
  }

  static getDerivedStateFromError(error: Error) {
    return { hasError: true, error };
  }

  render() {
    if (this.state.hasError) {
      return (
        <div className="p-6 bg-red-50 rounded-lg border border-red-200">
          <h2 className="text-lg font-semibold text-red-800">
            Failed to load module: {this.props.moduleName}
          </h2>
          <p className="text-red-600 mt-2">{this.state.error?.message}</p>
        </div>
      );
    }
    return this.props.children;
  }
}

function loadRemoteModule(url: string) {
  return lazy(async () => {
    const container = await import(/* @vite-ignore */ url);
    await container.init({
      react: {
        get: () => import('react'),
        loaded: true,
      },
      'react-dom': {
        get: () => import('react-dom'),
        loaded: true,
      },
      'react-router-dom': {
        get: () => import('react-router-dom'),
        loaded: true,
      },
    });
    const factory = await container.get('./Module');
    return { default: factory() };
  });
}

function App() {
  const [modules, setModules] = useState<Record<string, React.LazyExoticComponent<React.ComponentType>>>({});
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const location = useLocation();

  useEffect(() => {
    async function loadModules() {
      try {
        const response = await fetch(IMPORT_MAP_PATH);
        if (!response.ok) {
          console.warn('Import map not found, running without modules');
          setLoading(false);
          return;
        }

        const importMap: ImportMap = await response.json();
        const loadedModules: Record<string, React.LazyExoticComponent<React.ComponentType>> = {};

        for (const [moduleName, url] of Object.entries(importMap.imports)) {
          loadedModules[moduleName] = loadRemoteModule(url);
        }

        setModules(loadedModules);
        setLoading(false);
      } catch (err) {
        console.error('Failed to load import map:', err);
        setError(err instanceof Error ? err.message : 'Failed to load modules');
        setLoading(false);
      }
    }

    loadModules();
  }, []);

  if (loading) {
    return (
      <div className="min-h-screen flex items-center justify-center bg-gray-100">
        <div className="text-xl text-gray-600">Loading modules...</div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="min-h-screen flex items-center justify-center bg-gray-100">
        <div className="text-xl text-red-600">Error: {error}</div>
      </div>
    );
  }

  const currentModule = location.pathname.split('/')[1] || '';

  return (
    <div className="min-h-screen bg-gray-100">
      <nav className="bg-white shadow-sm">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between h-16">
            <div className="flex">
              <div className="flex-shrink-0 flex items-center">
                <span className="text-xl font-bold text-gray-900"><%= name %></span>
              </div>
              <div className="hidden sm:ml-6 sm:flex sm:space-x-8">
                <Link
                  to="/"
                  className={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
                    currentModule === ''
                      ? 'border-blue-500 text-gray-900'
                      : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
                  }`}
                >
                  Home
                </Link>
                {Object.keys(modules).map((moduleName) => (
                  <Link
                    key={moduleName}
                    to={`/${moduleName}`}
                    className={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
                      currentModule === moduleName
                        ? 'border-blue-500 text-gray-900'
                        : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
                    }`}
                  >
                    {moduleName.charAt(0).toUpperCase() + moduleName.slice(1)}
                  </Link>
                ))}
              </div>
            </div>
          </div>
        </div>
      </nav>

      <main className="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <Suspense
          fallback={
            <div className="flex items-center justify-center py-12">
              <div className="text-gray-600">Loading module...</div>
            </div>
          }
        >
          <Routes>
            <Route
              path="/"
              element={
                <div className="px-4 py-6 sm:px-0">
                  <div className="border-4 border-dashed border-gray-200 rounded-lg p-8 text-center">
                    <h1 className="text-2xl font-bold text-gray-900 mb-4">
                      Welcome to <%= name %>
                    </h1>
                    <p className="text-gray-600 mb-4">
                      This is your MFE shell. Navigate to modules using the links above.
                    </p>
                    {Object.keys(modules).length === 0 && (
                      <p className="text-gray-500 text-sm">
                        No modules loaded. Add module entries to{' '}
                        <code className="bg-gray-200 px-1 rounded">public/import-map.json</code>{' '}
                        to get started.
                      </p>
                    )}
                  </div>
                </div>
              }
            />
            {Object.entries(modules).map(([moduleName, ModuleComponent]) => (
              <Route
                key={moduleName}
                path={`/${moduleName}/*`}
                element={
                  <ModuleErrorBoundary moduleName={moduleName}>
                    <ModuleComponent />
                  </ModuleErrorBoundary>
                }
              />
            ))}
          </Routes>
        </Suspense>
      </main>
    </div>
  );
}

export default App;
