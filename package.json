{
  "name": "@pablo-clueless/create-mfe-module",
  "version": "1.0.0",
  "description": "CLI tool to scaffold MFE shells and modules with Vite + React + Module Federation",
  "main": "dist/index.js",
  "bin": {
    "create-mfe-module": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pablo-clueless/create-mfe-module.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "node -e \"const fs = require('fs'); fs.cpSync('src/templates', 'dist/templates', { recursive: true });\"",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["mfe", "micro-frontend", "module-federation", "vite", "react", "cli"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.2.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "ejs": "^3.1.10",
    "fs-extra": "^11.2.0",
    "picocolors": "^1.1.1"
  }
}
